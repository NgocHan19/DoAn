@*PHẦN ACCOUNT*@

<div class="account">
    <ul class="title-account">
        <li><a href="Logn In" class="fm-account">Logn In</a></li>
        <li><a href="#" class="fm-account">|</a></li>
        <li><a href="Sign Up" class="fm-account">Sign In</a></li>
    </ul>
    <div class="log-in">
        <label> Number Phone/Email</label><br />
        <input type="email" id="txtSDT/Email" placeholder="Nhập địa chỉ email/sđt của bạn..." style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <label>Password</label>
        <input type="password" id="txtPassword" placeholder="Nhập mật khẩu của bạn..." style="line-height:20px; padding:5px 15px;  width:500px" /> <br />
        <input type="checkbox" id="cbMiss" />Nhớ Mật Khẩu
        <br />
        <input type="submit" name="txtLognIn" value="Logn In" />
    </div>

    <div class="sign-up">
        <label>Full Name</label><br />
        <input type="text" id="txtName" placeholder="Nhập họ tên của bạn..." style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <label>Gender</label><br />
        <input type="radio" id="rdGender" />Male
        <input type="radio" id="rdGender" />FeMale
        <input type="radio" id="rdGender" />Other
        <label>Ngày Sinh</label><br />
        <input type="date" id="dt" style="line-height:20px; padding:5px 15px;  width:200px" /><br />
        <label>Email</label><br />
        <input type="email" id="txtEmail" placeholder="Nhập địa chỉ email của bạn..." style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <label>PhoneNumber</label><br />
        <input type="number" id="txtNumber" placeholder="Nhập số điện thoại của bạn..." style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <label>Username</label><br />
        <input type="text" id="txtName" style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <label>Password</label><br />
        <input type="password" id="txtpass1" name="password" style="line-height:20px; padding:5px 15px;  width:500px" /> <br />
        <label>
            Lưu ý: Mật khẩu cói tối thiểu 8 ký tự bao gồm chữ, số và các ký tự đặc biệt
        </label><br />
        <label> Confirm Password</label><br />
        <input type="password" id="txtpass2" name="confirm-password" style="line-height:20px; padding:5px 15px;  width:500px" /><br />
        <br />
        <input type="submit" name="txtSignIn" value="Sign In" />
    </div>
</div>

